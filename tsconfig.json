{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "esnext",
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "docs/.vitepress/**/*.ts",
    "docs/.vitepress/config.mts"
  ],
  "exclude": ["node_modules"]
}
