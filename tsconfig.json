{
  "include": ["**/*.svelte", "**/*.astro", "**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules", "coverage"],
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "esnext",
    "target": "esnext",
    "types": ["node"],
    "allowJs": true,
    "strict": true,
    "noEmit": true
  }
}
